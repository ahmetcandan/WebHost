@{
    ViewBag.Title = "Test";
}
<h2>@ViewBag.Title</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label for="host" class="col-sm-2 control-label">Host</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="host" value="localhost" placeholder="Host">
        </div>
    </div>
    <div class="form-group">
        <label for="portNo" class="col-sm-2 control-label">Port No</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="portNo" value="8081" placeholder="Port No">
        </div>
    </div>
    <div class="form-group">
        <label for="command" class="col-sm-2 control-label">Command</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="command" placeholder="Command">
        </div>
    </div>
    <div class="form-group">
        <label for="param" class="col-sm-2 control-label">Param</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="param" placeholder="Param">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-primary" onclick="PostFunct()">Post</button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-danger" onclick="Lock()">Lock</button>
        </div>
    </div>
</div>

<script>
    function PostFunct() {
        const host = document.getElementById("host").value;
        const portNo = document.getElementById("portNo").value;
        const command = document.getElementById("command").value;
        const param = document.getElementById("param").value;

        $.post("http://" + host + ":" + portNo + "/Cmd", { Command: command, Param: param });
    }

    function Lock() {
        const host = document.getElementById("host").value;
        const portNo = document.getElementById("portNo").value;
        $.get("http://" + host + ":" + portNo + "/Cmd/lock");
    }
</script>